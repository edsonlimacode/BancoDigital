<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp"
    android:background="@drawable/bg_bottom_sheet_dialog">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="50dp"
        android:layout_height="3dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#A4A4A4"
        android:elevation="0dp"
        app:cardCornerRadius="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Selecione uma imagem"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView2" />

    <ImageButton
        android:id="@+id/btnImageCamera"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="52dp"
        android:backgroundTint="@color/purple_900"
        app:layout_constraintEnd_toStartOf="@+id/btnImageGallery"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        app:srcCompat="@drawable/ic_add_photo_24"
        app:tint="@color/white" />

    <ImageButton
        android:id="@+id/btnImageGallery"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/purple_900"
        app:layout_constraintBottom_toBottomOf="@+id/btnImageCamera"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnImageCamera"
        app:layout_constraintTop_toTopOf="@+id/btnImageCamera"
        app:srcCompat="@drawable/ic_add_photo_gallery_24"
        app:tint="@color/white" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Camera"
        android:textColor="@color/purple_900"
        app:layout_constraintEnd_toEndOf="@+id/btnImageCamera"
        app:layout_constraintStart_toStartOf="@+id/btnImageCamera"
        app:layout_constraintTop_toBottomOf="@+id/btnImageCamera" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Galeria"
        android:textColor="@color/purple_900"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/btnImageGallery"
        app:layout_constraintStart_toStartOf="@+id/btnImageGallery"
        app:layout_constraintTop_toBottomOf="@+id/btnImageGallery" />


</androidx.constraintlayout.widget.ConstraintLayout>